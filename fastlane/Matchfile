# vim: syntax=ruby

git_url("git@github.com:tasuwo/certificates.git")
storage_mode("git")
readonly(true)

for_platform :ios do
  platform("ios")

  app_identifier([
      "net.tasuwo.TBox",
      "net.tasuwo.TBox.dev",
      "net.tasuwo.TBox.ShareExtension",
      "net.tasuwo.TBox.dev.ShareExtension"
  ])

  for_lane :update_development_pp do
    readonly(false)
    force(true)

    type("development")
  end

  for_lane :update_appstore_pp do
    readonly(false)
    force(true)

    type("appstore")
  end

  for_lane :release do
    type("appstore")
    readonly(true)
    app_identifier([
      "net.tasuwo.TBox",
      "net.tasuwo.TBox.ShareExtension"
    ])
  end

  for_lane :release_build_only do
    type("appstore")
    readonly(true)
    app_identifier([
      "net.tasuwo.TBox",
      "net.tasuwo.TBox.ShareExtension"
    ])
  end
end

for_platform :mac do
  platform("macos")

  app_identifier([
      "net.tasuwo.TBox",
      "net.tasuwo.TBox.dev",
  ])

  for_lane :update_development_pp do
    readonly(false)
    force(true)

    type("development")
  end

  for_lane :update_appstore_pp do
    readonly(false)
    force(true)

    type("appstore")
  end
end
